@model IEnumerable<HereToYou.Models.ContactUs>

@{
    ViewData["Title"] = "Contact Us";
    Layout = "AdminLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Contact Us</h6>
                <div class="d-flex mb-3 justify-content-between align-items-center">
                    <form asp-action="SearchByProducttName" method="post" class="d-flex align-items-center w-100">
                        <input type="text" name="name" class="form-control me-2" placeholder="Search by name" style="width: calc(100% - 120px);" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Message)</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.ContactUsId">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.ContactUsId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>