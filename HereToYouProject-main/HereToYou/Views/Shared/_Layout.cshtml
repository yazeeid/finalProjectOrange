<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

    <!-- title -->
    <title>GameZone</title>

    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="~/img/logooooooo.jpeg">

    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">

    <!-- fontawesome -->
    <link rel="stylesheet" href="~/css/all.min.css">

    <!-- bootstrap -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- owl carousel -->
    <link rel="stylesheet" href="~/css/owl.carousel.css">

    <!-- magnific popup -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">

    <!-- animate css -->
    <link rel="stylesheet" href="~/css/animate.css">

    <!-- mean menu css -->
    <link rel="stylesheet" href="~/css/meanmenu.min.css">

    <!-- main style -->
    <link rel="stylesheet" href="~/css/main.css">

    <!-- responsive -->
    <link rel="stylesheet" href="~/css/responsive.css">
</head>
<style>
    body {
        background-color: #f8f9fa; /* Light background color */
        color: #343a40; /* Dark text color for readability */
    }

    .bg-secondary {
        background-color: #ffffff; /* White background for secondary elements */
        color: #343a40; /* Dark text color for readability */
        border: 1px solid #dee2e6; /* Light border color */
    }

    .text-primary {
        color: #007bff !important; /* Primary color for text */
    }

    .table thead th {
        background-color: #007bff; /* Blue background for table headers */
        color: #ffffff; /* White text color for table headers */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        border-color: #007bff; /* Border color for buttons */
    }

    .btn-primary:hover {
        background-color: #0056b3; /* Darker shade on hover */
        border-color: #004080; /* Darker border color on hover */
    }

    .alert-primary {
        background-color: #007bff; /* Primary alert color */
        color: #ffffff; /* White text color for alerts */
    }

    .form-check-input:checked {
        background-color: #007bff; /* Primary color for checked checkboxes */
        border-color: #007bff; /* Border color for checked checkboxes */
    }

    .navbar-dark .navbar-nav .nav-link {
        color: #007bff !important; /* Primary color for navigation links */
    }

    .top-header-area .header-icons a:hover {
        color: #b458ba;
    }
    </style>

<body style="background-color: #ffffff;">
    <!--PreLoader-->
    
	<!--PreLoader Ends-->
	<!-- header -->
	<div class="top-header-area" id="sticker">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-sm-12 text-center">
					<div class="main-menu-wrap">
						<!-- logo -->
						<div class="site-logo">
							<a href="index.html">
								<img src="assets/img/logo.png" alt="">
							</a>
						</div>
						<!-- logo -->
						<!-- menu start -->
                        <nav class="main-menu">
                            <ul>
                                <li class="current-list-item">
                                    <a asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="About">About Us</a>
                                </li>

                                <li>
                                    <a asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                                </li>
                                <li>
                                    <a asp-controller="Home" asp-action="Shop">Shop</a>
                                </li>
                                <li>
                                    <div class="header-icons">
                                        <a class="nav-link" asp-action="Index" asp-controller="Cart">
                                            <i class="fas fa-shopping-cart" style="display:initial; "></i>
                                            <sup>
                                                <span id="cart-count" style="width: 18px; display: inline-block; height: 18px; border-radius: 50%; color: white; text-align: center; font-size: 10px;">0</span>
                                            </sup>
                                        </a>
                                        <a class="mobile-hide search-bar-icon" href="#"><i class="fas fa-search"></i></a>
                                        @if (@ViewBag.Login != null)
                                        {
                                            <a class="nav-link" asp-action="Logout" asp-controller="Authentication"><i class="fas fa-sign-out-alt fa-lg" style="display:initial"></i></a>
                                        }
                                        else
                                        {
                                            <a class="nav-link" asp-action="Login" asp-controller="Authentication">Login</a>
                                        }
                                    </div>
                                </li>
                            </ul>
                        </nav>
						<a class="mobile-show search-bar-icon" href="#"><i class="fas fa-search"></i></a>
						<div class="mobile-menu"></div>
						<!-- menu end -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end header -->
	<!-- search area -->
	<div class="search-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span class="close-btn"><i class="fas fa-window-close"></i></span>
					<div class="search-bar">
						<div class="search-bar-tablecell">
							<h3>Search For</h3>
							<input type="text" placeholder="Keywords">
							<button type="submit">Search <i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end search area -->
	<!-- home page slider -->

	<!-- end home page slider -->

    
            @RenderBody()
	
    
    <!-- Begin Of footer -->
    <div class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box about-widget">
                        <h2 class="widget-title">About us</h2>
                        <p>Welcome to GameZone, the ultimate destination for gamers!.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box get-in-touch">
                        <h2 class="widget-title">Get in Touch</h2>
                        <ul>
                            <li>Amman, Amman, Jordan</li>
                            <li>support@gamezone.com</li>
                            <li>009628655522</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box pages">
                        <h2 class="widget-title">Pages</h2>
                        <ul>
                            <li><a asp-action="Index">Home</a></li>
                            <li><a asp-action="About">About</a></li>
                            <li><a asp-action="galary">Gift ideas</a></li>
                            <li><a asp-action="ContactUs">Contact</a></li>
                            <li><a asp-action="Shop">Shop</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box subscribe">
                        <h2 class="widget-title">Subscribe</h2>
                        <p>Subscribe to our mailing list to get the latest updates.</p>
                        <form action="index.html">
                            <input type="email" placeholder="Email">
                            <button type="submit" style="margin-top:1rem">submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
	
    <!-- end footer -->
    <!-- copyright -->
    
    <!-- end copyright -->
    <!-- jquery -->
    <script src="~/js/jquery-1.11.3.min.js"></script>

    <!-- bootstrap -->
    <!-- bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>

    <!-- count down -->
    <script src="~/js/jquery.countdown.js"></script>

    <!-- isotope -->
    <script src="~/js/jquery.isotope-3.0.6.min.js"></script>

    <!-- waypoints -->
    <script src="~/js/waypoints.js"></script>

    <!-- owl carousel -->
    <script src="~/js/owl.carousel.min.js"></script>

    <!-- magnific popup -->
    <script src="~/js/jquery.magnific-popup.min.js"></script>

    <!-- mean menu -->
    <script src="~/js/jquery.meanmenu.min.js"></script>

    <!-- sticker js -->
    <script src="~/js/sticker.js"></script>

    <!-- main js -->
    <script src="~/js/main.js"></script>
</body>
</html>
