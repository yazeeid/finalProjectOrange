@model IEnumerable<HereToYou.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">User Table</h6>

                <div class="d-flex mb-3">
                    <div class="flex-grow-1 mr-2">
                        <form asp-action="SearchByUserName" method="post" class="d-flex align-items-center">
                            <input type="text" name="name" class="form-control" placeholder="Search by user name " />
                            <button type="submit" class="btn btn-primary ms-2" style="margin-right:3%">Search</button>
                        </form>
                    </div>
                    <div>
                        <a asp-action="Create" class="btn btn-success">Create New</a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role Name</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Action</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@(item.Username ?? "N/A")</td>
                                    <td>@(item.Email ?? "N/A")</td>
                                    <td>@item.Role.Name</td>
                                    <td>@item.phoneNumber</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <br />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>